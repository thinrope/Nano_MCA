#ifndef __LCD_H
#define __LCD_H

//============================ LCD dimensions ================================== 
// (0,0) is lower left corner
#define LCD_WIDTH   320
#define LCD_HEIGHT  240
#define LCD_X1      0
#define LCD_X2      (LCD_WIDTH - LCD_X1 - 1)
#define LCD_Y1      0
#define LCD_Y2      (LCD_HEIGHT - LCD_Y1 - 1)
// defines below allow use of a frame
#define X_SIZE      LCD_WIDTH
#define Y_SIZE      LCD_HEIGHT
#define MIN_X       0	// note: minimum index
#define MIN_Y       0	// note: minimum index
#define MAX_X       (X_SIZE - 1)	// note: maximum index
#define MAX_Y       (Y_SIZE - 1)	// note: maximum index

// define display field widths in pixels

#define CHAR_WIDTH		8
#define CHAR_HEIGHT		16
#define SHORT_DIGITS    7
#define SHORT_WIDTH 	(SHORT_DIGITS * CHAR_WIDTH)
#define INT_DIGITS      14
#define INT_WIDTH 		(INT_DIGITS * CHAR_WIDTH)
#define SPACE_WIDTH		(1 * CHAR_WIDTH)



//======================= display color mapping ================================ 
// R = 5 bits 0:4, G = 6 bits 5:10, B = 5 bits 11:15
#define RGB(_R,_G,_B) (((_R & 0x3E) >> 1) | ((_G & 0x3f) << 5) | ((_B & 0x3e) << 10))



//========================= color definitions ================================== 
#define WHITE       RGB(63,63,63)
#define YEL         RGB(63,63,0)
#define DRK_YEL     RGB(32,32,0)
#define RED         RGB(63,0,0)
#define DRK_RED     RGB(32,0,0)
#define GRN         RGB(0,63,0)
#define DRK_GRN     RGB(0,32,0)
#define BLUE		RGB(0,0,63)
#define DRK_BLUE	RGB(0,0,32)
#define BLACK       RGB(0,0,0)
#define GRAY		RGB(24,24,24)


#define FRM_COLOR   	GRAY
#define BKGND_COLOR 	WHITE
#define CURSOR_COLOR	RED
#define TXT_COLOR 		BLACK
#define EMER_TXT_COLOR 	RED
#define SPECT_COLOR 	BLUE
#define PEAK_COLOR 		GRN

//========================= type definitions ===============================
#define NULL ((unsigned const char *) 0)
typedef enum { PRN, INV, ADD, ERASE } PixMode;

extern const unsigned int Logo_Dot[512];

//===================== fuction declarations ===================================
void LCD_WR_REG(u16 reg, u16 data);
void LCD_SET_WINDOW(u16 x1, u16 x2,u16 y1, u16 y2); 
void Point_SCR(u16 x0, u16 y0);
void Set_Pixel(Color color);
void Clear_Screen(Color color);
void Display_Frame(void);						
void Fill_Rectangle(u16 x0, u16 y0, u16 width, u16 height, Color color, PixMode mode);
void Rounded_Rectangle(u16 x0, u16 y0, short width, short height, Color color);
void Display_Int(u16 x0, u16 y0, Color color, PixMode mode, int num);
void Display_Bool(u16 x0, u16 y0, Color color, PixMode mode, Bool val);
void Display_Str(u16 x0, u16 y0, Color color, PixMode mode, u8 *s);
void Draw_Vert_Line(u16 x, u16 y1, u16 y2, Color color, PixMode mode);
void Draw_Horz_Line(u16 y, u16 x1, u16 x2, Color color, PixMode mode);
void Draw_Ti_Mark(u16 x, u16 y, Color color, PixMode mode);
void Draw_Trig_Mark(u16 x, u16 y, Color color, PixMode mode);
void Draw_Dot(u16 x, u16 y, Color color, PixMode mode);

#endif

/********************************* END OF FILE ********************************/
